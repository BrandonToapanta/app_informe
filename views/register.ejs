<!doctype html>
<html lang="en">

<head>
    <title>Los pros</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="resources/css/style.css">
</head>

<body>
    <div class="login-box">
        <h1>Registro</h1>
        <form method="post" id="login-form'">
            <div class="user-box">
                <select name="rol" id="rol">
                    <option value="admin">Admin</option>
                    <option value="pasante">Pasante</option>
                </select>
                <label class="label_rol" for="rol">Rol del usuario</label>
            </div>
            <div class="user-box">
                <input type="text" name="name" required="" id="name">
                <label for="name">Nombre completo</label>
            </div>
            <div class="user-box">
                <input type="text" name="user" required="" id="user">
                <label for="user">Username</label>
            </div>
            <div class="user-box">
                <input type="password" name="password" required="" id="password">
                <label>Password</label>
            </div>
            <div class="user-box">
                <input type="password" name="tutor" id="tutor">
                <!-- programar para que muestre todos los admin
                    <select name="rol" id="rol">
                    <option value="admin">Admin</option>
                    <option value="pasante">Pasante</option>
                </select> -->
                <label>Tutor del pasante</label>
            </div>
            <button class="button_login" type="submit"><span>Registrarse</span></button>
        </form>
    </div>
    <script src="js/app.js"></script>
</body>

</html>